/*Listar los  productos con m√°s unidades vendidas.*/

db.Orden.aggregate([
    {
        $unwind: "$ordenDetalles"
    },
    {
        $group:{
            _id: "$ordenDetalles.idProducto",
            cantidad: {$sum:"$ordenDetalles.cantidadProducto"}
        }
    },
    {
        $sort:{
            cantidad: -1
        }
    }
])